<title>Welcome</title>
<!--style section-->
<style>

.navbar{
  padding:0;
}
.nav>li>a {
   position: relative; 
  display: block;
  padding: 13px 2px;
}
.nav>li>a:hover{
  background-color:rgb(27, 75, 206);
}
.btn{
  background-color:rgb(27, 75, 206) ;
}
.element{
  text-align: center;
  margin-top: 50px;
}
.drop:hover{
  text-decoration: none;
}
.items>li>a:hover{
  text-decoration: none;
  color:slateblue;
}
